# Caddyfile for IDP Application - HTTP Only Mode
# Serve domain and local hosts without TLS (provider blocks Let's Encrypt)

http://neovision.duckdns.org {
    encode gzip

    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    reverse_proxy frontend:80 {
        health_uri /health
        health_interval 30s
        health_timeout 5s
    }

    log {
        output file /var/log/caddy/access.log
        format json
    }
}

http://localhost {
    encode gzip
    reverse_proxy frontend:80
}

http://127.0.0.1 {
    encode gzip
    reverse_proxy frontend:80
}

# Catch-all on port 80 (optional; comment out if undesired)
:80 {
    respond /health 200 {
        body "healthy\n"
        close
    }
    reverse_proxy frontend:80
}


