# Database Configuration
POSTGRES_DB=neocaptured_db
POSTGRES_USER=neocaptured_user
POSTGRES_PASSWORD=your_secure_password_here

# Security
SECRET_KEY=your_super_secret_key_here_change_in_production

# API Configuration
VITE_API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Application Configuration
VITE_APP_NAME=IDP Portal
ENVIRONMENT=production

# OCR Languages
OCR_LANG=en,ar
USE_TROCR=true
TROCR_FALLBACK_THRESHOLD=0.65
USE_DONUT=true
DONUT_THRESHOLD=0.60
DONUT_FORCE_TYPES=handwritten,unknown

# Redis Configuration
REDIS_URL=redis://redis:6379

# Optional: SSL Configuration (if using HTTPS)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Optional: Email Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Optional: File Storage
# MAX_FILE_SIZE=50MB
# ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,txt
