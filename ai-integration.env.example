# AI Agent Integration Configuration
# Copy this file to .env and configure with your AI solution details

# AI Agent API Configuration
AI_AGENT_BASE_URL=https://0d18e20fd76f.ngrok-free.app
AI_AGENT_API_KEY=your_api_key_here
AI_AGENT_TIMEOUT=30

# Knowledge Base Integration
ENABLE_AI_KNOWLEDGE_BASE=true
KB_AUTO_ADD_DOCUMENTS=true
KB_CATEGORY_MAPPING=financial:invoice,bill,receipt;legal:contract,agreement;reports:report,analysis

# AI Chat Configuration
ENABLE_AI_CHAT=true
CHAT_SESSION_TIMEOUT=3600
MAX_CHAT_HISTORY=50

# Document Insights
ENABLE_DOCUMENT_INSIGHTS=true
INSIGHT_TYPES=summary,key_points,action_items,entities
MAX_INSIGHT_LENGTH=500

# Vector Search Configuration
VECTOR_DIMENSIONS=1536
SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=10

# MCP Server Configuration
ENABLE_MCP_SERVER=true
MCP_SERVER_PORT=8001
MCP_PROTOCOL_VERSION=2024-11-05

# User Context for AI Integration
DEFAULT_USER_ID=admin@neocaptured.com
DEFAULT_ORGANIZATION_ID=neocaptured-default

# AI Workflow Integration
ENABLE_AI_WORKFLOWS=true
AUTO_CREATE_WORKFLOWS=false

# Notification Settings
AI_NOTIFICATION_ENABLED=true
AI_NOTIFICATION_WEBHOOK_URL=

# Rate Limiting
AI_RATE_LIMIT_REQUESTS_PER_MINUTE=60
AI_RATE_LIMIT_BURST=10

# Logging
AI_LOG_LEVEL=INFO
AI_LOG_REQUESTS=true
AI_LOG_RESPONSES=false
