# AI Configuration Environment Variables
# Copy this file to .env and configure your AI settings

# AI Agent API Configuration
AI_AGENT_BASE_URL=https://0d18e20fd76f.ngrok-free.app
AI_AGENT_TIMEOUT=30
AI_AGENT_API_KEY=your_api_key_here

# Chat Configuration
AI_CHAT_SESSION_TIMEOUT=3600
AI_MAX_CHAT_HISTORY=100

# Knowledge Base Configuration
AI_VECTOR_DIMENSIONS=768
AI_SIMILARITY_THRESHOLD=0.7
AI_MAX_SEARCH_RESULTS=20

# Document Insights Configuration
AI_INSIGHT_TYPES=summary,key_points,entities,sentiment
AI_MAX_INSIGHT_LENGTH=1000

# MCP Configuration
AI_MCP_ENABLED=true
AI_MCP_PORT=8002

# Feature Flags
AI_ENABLE_CHAT=true
AI_ENABLE_KNOWLEDGE_BASE=true
AI_ENABLE_DOCUMENT_INSIGHTS=true
AI_ENABLE_WORKFLOWS=true

# Alternative AI Agent URLs (examples)
# AI_AGENT_BASE_URL=https://your-custom-ai-agent.com
# AI_AGENT_BASE_URL=https://api.openai.com/v1
# AI_AGENT_BASE_URL=https://api.anthropic.com/v1
# AI_AGENT_BASE_URL=https://your-azure-openai-endpoint.openai.azure.com
